{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": ["es2018", "dom"],
    "paths": {
      "@app/*": ["app/*"],
      "@core/*": ["app/infrastructure/core/*"],
      "@env/*": ["environments/*"],
      "@features/*": ["app/features/*"],
      "@models/*": ["app/infrastructure/models/*"],
      "@shared/*": ["app/infrastructure/shared/*"],
      "@utils/*": ["app/infrastructure/utils/*"]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
